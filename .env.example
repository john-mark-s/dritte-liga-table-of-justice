# 3. Liga Table of Justice - Environment Variables

# Paths
BASE_DIR=./data
LOGS_DIR=./logs
CONFIG_DIR=./config

# Scraping settings
SCRAPING_DELAY_MIN=2
SCRAPING_DELAY_MAX=8
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30

# Dashboard settings
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Data sources (comma-separated)
ENABLED_SOURCES=footystats,soccerway

# Automation settings
AUTO_RUN_HOUR=6
LOOKBACK_DAYS=7